<div class="row">
    <div class="col-lg-12">
        <h3> Edit New Course </h3>
    </div>
</div>

<div class="row">

    <div class="col-lg-12">
        <form method="POST" action="/news/{{ this.id }}?_method=PUT">
            <div class="form-group">
                <label> Name </label>
                <input type="text" name="name" value="{{ this.name }}" class="form-control" />
            </div>

            <div class="form-group">
                <label> Slug </label>
                <textarea type="text" name="slug" class="form-control" readonly>{{ this.slug }}</textarea>
            </div>

            <div class="form-group">
                <label> Description </label>
                <input type="text" name="description" value="{{ this.description }}" class="form-control" />
            </div>

            <div class="form-group">
                <label> Image </label>
                <input type="text" name="image" value="{{ this.image }}" class="form-control" />
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary"> Updated </button>
            </div>
        </form>
    </div>
</div>